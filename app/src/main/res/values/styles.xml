<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="background">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorLightDark</item>
        <item name="android:textColor">@color/colorLightDark</item>
        <item name="android:textColorSecondary">@color/colorLightDark</item>
        <item name="android:textColorTertiary">@color/colorLightDark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/colorLightDark</item>
        <item name="colorControlActivated">@color/colorLightDarkHint</item>
        <item name="colorControlHighlight">@color/colorLightDarkHint</item>
        <item name="android:panelColorBackground">@color/colorPrimary</item>
        <item name="android:panelBackground">@color/colorPrimary</item>
        <item name="android:panelColorForeground">@color/colorPrimary</item>
        <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:textColorHint">@color/colorLightDarkHint</item>
        <item name="android:fontFamily">@font/roboto_thin</item>

        <item name="materialButtonStyle">@style/MaterialTextButtonStyle</item>
        <item name="textInputStyle">@style/MaterialTextBoxStyleOutline</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewStyle</item>
        <item name="materialButtonOutlinedStyle">@style/MaterialTextButtonOutlineStyle</item>
<!--        <item name="android:dialogTheme">@style/AppDialogTheme</item>-->
<!--        <item name="alertDialogTheme">@style/AppDialogTheme</item>-->
<!--        <item name="alertDialogStyle">@style/AppAlertDialog</item>-->

    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorLightDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorLightDark</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorLightDark</item>
        <item name="colorControlNormal">@color/colorLightDark</item>
    </style>

    <style name="DialogFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_textview</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="MenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorLightDark</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- style for material button non-outlines-->
    <style name="MaterialTextButtonOutlineStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="strokeWidth">0.5dp</item>
<!--        <item name="strokeColor">@color/primary_outline_button_states</item>-->
        <item name="cornerRadius">@dimen/button_radius</item>
<!--        <item name="android:textColor">@color/primary_outline_button_states</item>-->
    </style>

    <!-- style for material button non-outlines-->
    <style name="MaterialTextButtonSmallRoundedStyle" parent="MaterialTextButtonStyle">
        <item name="android:bottomLeftRadius">@dimen/button_radius</item>
        <item name="android:bottomRightRadius">@dimen/button_radius</item>
        <item name="android:topLeftRadius">@dimen/button_radius</item>
        <item name="android:topRightRadius">@dimen/button_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/button_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/button_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/button_radius</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <style name="MaterialTextButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="android:topLeftRadius">0dp</item>
        <item name="android:topRightRadius">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="cornerRadius">@dimen/button_radius</item>

    </style>

    <style name="MaterialTextBoxStyleOutline" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:bottomLeftRadius">4dp</item>
        <item name="android:bottomRightRadius">4dp</item>
        <item name="android:topLeftRadius">4dp</item>
        <item name="android:topRightRadius">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCollapsedPaddingTop">4dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/colorLightDark</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/colorLightDark</item>
        <item name="hintTextColor">@color/colorLightDarkHint</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:textAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/colorLightDark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="endIconTint">@color/colorLightDark</item>
        <item name="startIconTint">@color/colorLightDark</item>
    </style>
    <!--    the card properties and style-->
    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="cardMaxElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/negative_item_margin</item>
        <item name="android:layout_marginRight">@dimen/negative_item_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorLightDarkHint</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>