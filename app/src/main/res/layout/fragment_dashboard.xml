        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/total_budget"
            android:textColor="@color/orange"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/pie_chart"
            app:layout_constraintStart_toStartOf="@id/pie_chart"
            app:layout_constraintTop_toBottomOf="@id/tvIncome" />


        <androidx.cardview.widget.CardView
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/pie_chart"
            android:layout_height="55dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/sources_of_income"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/netIncomeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:gravity="end"
                android:textColor="@color/orange"
                android:text="@string/net_income"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

